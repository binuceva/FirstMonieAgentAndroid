                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/textViewnb2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="#3C2415"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>


                                <RelativeLayout


                                    android:id="@+id/rlem"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/textViewrd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Amount:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/textViewrrs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="#3C2415"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>

                                <RelativeLayout


                                    android:id="@+id/rlgend"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/textViewr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Narration:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/textViewrr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>

                                <RelativeLayout


                                    android:id="@+id/rlfee"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/textfee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Fee:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/txtfee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>

                                <RelativeLayout


                                    android:id="@+id/rlsendnam"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/sendernam"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Payer Name:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/sendnammm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="#3C2415"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>

                                <RelativeLayout


                                    android:id="@+id/rlsendnum"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/sendernumm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Payer Number:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/sendno"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="#3C2415"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>

                                <RelativeLayout


                                    android:id="@+id/rltrref"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:visibility="gone"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/tref"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Tran. Reference:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/txref"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>

                                <RelativeLayout


                                    android:id="@+id/rlaccom"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"


                                    >

                                    <TextView
                                        android:id="@+id/accomm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dip"
                                        android:text="Agent Commision:"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize" />

                                    <TextView
                                        android:id="@+id/txtaccom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dip"
                                        android:layout_marginTop="15dip"
                                        android:text="\u20A6 0.00"
                                        android:textColor="#3C2415"
                                        android:textSize="@dimen/textsize" />

                                </RelativeLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl5">

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dip"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="10dip"
                                android:background="@drawable/mybutton"

                                android:padding="5dp"
                                android:text="OK"
                                android:textColor="@color/white" />
                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>